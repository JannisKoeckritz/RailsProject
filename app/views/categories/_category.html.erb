<% obj.each do |c| %>
	<div class="centered-view">
		<div class="listing-bubble">
			<ul class="listing-view">
				<li class="listing-title">
					<%= link_to c.name, category_path(c) %>
				</li>
				<li class="listing-body">
					<%= pluralize(c.articles.count, "article") if c.articles %>
				</li>
				<li class="listing-meta-details">
					<small> 
						Created: <%= time_ago_in_words(c.created_at) %> ago
					</small>
				</li>
				<% if logged_in? && current_user.admin? %>
					<li>
						<small><%= link_to "Delete this category", category_path(c), method: :delete, data: { confirm: "Are you sure you want to delete this category?"}, class: "delete-link" %>
						</small>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
<% end %>