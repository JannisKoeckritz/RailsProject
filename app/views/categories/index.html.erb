<h1 align="center">Listing All Categories</h1>
<div align="center">
	<div align="center" class="pagination-blog"><%= will_paginate @categories, class: "page-item" %></div>
	<%= render 'category', obj: @categories %>
	<% if logged_in? && current_user.admin? %>
		<div class="form-group">
			<%= link_to "Create Category", new_category_path, class: "btn btn-success"%>
		</div>
	<% end %>
	<div align="center" class="pagination-blog"><%= will_paginate @categories, class: "page-item"%></div>
</div>