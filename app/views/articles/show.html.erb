<h2 align="center"><%= @article.title %></h2>
<div class="row">
	<div class="col">
		<% if @article.user %>
			<ul class="listing-view" align="center">
				<li><small>Created by:</small></li>
				<li class="listing-title">
					<%= link_to gravatar_for(@article.user), user_path(@article.user) %>
				</li>
				<li class="listing-title">
					<%= link_to @article.user.username, user_path(@article.user) %>
				</li>
			</ul>
		<% end %>
		<h4 align="center" class="description"><strong>Description</strong></h4>
		<hr>
		<%= @article.description %>
		<div class="listing-category">
			<% @article.categories.each do |ac| %>
				<%= link_to "#" + ac.name, category_path(ac), class: "badge badge-pill badge-dark listing-category-link" %>
			<% end %>
		</div>
	</div>
</div>
	<div class="button_class">
		<% if logged_in? && (current_user == @article.user || current_user.admin?) %>
			<%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-sm btn-primary" %> |
		<% end %> 
		<%= link_to "View all articles", articles_path, class: "btn btn-sm btn-secondary" %>
	</div>
