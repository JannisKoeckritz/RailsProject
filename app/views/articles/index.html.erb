<h1>All Articles</h1>
<p>
	<%= link_to "Create new article", new_article_path %>
</p>
<table class="table">
	<thead class="thead-light">
		<tr>
			<th scope="col">#</th>
			<th scope="col">Title</th>
			<th scope="col">Description</th>
			<th scope="col"></th>
			<th scope="col"></th>
			<th scope="col"></th>
		</tr>
	</thead>
<% @articles.each do |a| %>
	<tr>
		<th scope="col"><%= a.id %></th>
		<td><%= a.title %></td>
		<td><%= a.description %></td>
		<td><%= link_to "Edit", edit_article_path(a) %></td>
		<td><%= link_to "Show", article_path(a) %> </td>
		<td><%= link_to "Delete", article_path(a), class: "deleteButton", method: :delete, data: {confirm: "Are you sure?"} %></td>
	<tr>
<% end %>
</table>
<%= link_to "Back to the home page", root_path %>
