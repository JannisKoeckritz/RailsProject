<%= render 'shared/errors', obj: @user%>
<h1 align="center">Signup for Alpha Blog</h1>
<div class="container">
	<%= form_for @user do |f| %>
		<div class="form-group">
			<%= f.label :username %>
	  	<%= f.text_field :username, class: "form-control", placeholder: "Enter your username here" %>
		</div>
	  <div class="form-group">
	  	<%= f.label :email %><br />
	  	<%= f.email_field :email, class: "form-control", placeholder: "Enter your email here" %>
		</div>
		<div class="form-group">
	  	<%= f.label :password %><br />
	  	<%= f.password_field :password, class: "form-control", placeholder: "Enter your password here" %>
		</div>
		<div class="form-group">
	  	<%= f.submit "Sign up", class: "btn btn-success" %>
	  </div>
	<% end %>
</div>
<%= link_to "Back to home page", root_path %>